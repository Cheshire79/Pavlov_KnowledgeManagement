@model WebUI.Models.KnowledgeManagement.SubSkillViewModel

@{
    ViewBag.Title = "EditSubSkill";
    Layout = "~/Views/ManagerSkill/_LayoutManagerSkill.cshtml";
}

<div class="headerSkills">Edit subSkill</div>


    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            @Html.ValidationSummary()
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "input-skill-name" })
                    <!--Html.ValidationMessageFor(model => model.Name)-->
                </div>
            </div>

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.SkillId)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <a href=@Model.ReturnUrl>Back to subSkills list</a>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
